<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/schedule_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.gj.gaojiaohui.activity.PersonalDataActivity" >

    <include layout="@layout/custom_title_layout" />

    <RelativeLayout
        android:id="@+id/addschedule_title_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/addschedule_title_point_img"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/home_icon_title_nor" />

        <TextView
            android:id="@+id/addschedule_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/addschedule_title_point_img"
            android:gravity="center"
            android:text="@string/schedule_title"
            android:textColor="@color/zhanshang_title"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/addschedule_title_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/person_btn_edit_nor" />

        <View
            android:id="@+id/addschedule_title_view"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/addschedule_title_img"
            android:background="@color/shu_view" />

        <EditText
            android:id="@+id/addschedule_title_et"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/addschedule_title_view"
            android:layout_toRightOf="@+id/addschedule_title_tv"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/neirong"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/view" />

    <!-- 地点 -->

    <RelativeLayout
        android:id="@+id/addschedule_place_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/addschedule_place_point_img"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/home_icon_title_nor" />

        <TextView
            android:id="@+id/addschedule_place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/addschedule_place_point_img"
            android:gravity="center"
            android:text="@string/schedule_place"
            android:textColor="@color/zhanshang_title"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/addschedule_place_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/person_btn_edit_nor" />

        <View
            android:id="@+id/addschedule_place_view"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/addschedule_place_img"
            android:background="@color/shu_view" />

        <EditText
            android:id="@+id/addschedule_place_et"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/addschedule_place_view"
            android:layout_toRightOf="@+id/addschedule_place_tv"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/neirong"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/view" />

    <!-- 日期 -->

    <RelativeLayout
        android:id="@+id/addschedule_data_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/addschedule_data_point_img"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/home_icon_title_nor" />

        <TextView
            android:id="@+id/addschedule_data_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/addschedule_data_point_img"
            android:gravity="center"
            android:text="@string/schedule_date"
            android:textColor="@color/zhanshang_title"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/addschedule_data_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/person_btn_edit_nor" />

        <View
            android:id="@+id/addschedule_data_view"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/addschedule_data_img"
            android:background="@color/shu_view" />

        <TextView
            android:id="@+id/add_data_tv"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/addschedule_data_view"
            android:layout_toRightOf="@+id/addschedule_data_tv"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:maxLength="20"
            android:textColor="@color/neirong"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/view" />

    <!-- 开始时间 -->

    <RelativeLayout
        android:id="@+id/addschedule_starttime_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/addschedule_starttime_point_img"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/home_icon_title_nor" />

        <TextView
            android:id="@+id/addschedule_starttime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/addschedule_starttime_point_img"
            android:gravity="center"
            android:text="@string/schedule_start"
            android:textColor="@color/zhanshang_title"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/addschedule_starttime_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/person_btn_edit_nor" />

        <View
            android:id="@+id/addschedule_starttime_view"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/addschedule_starttime_img"
            android:background="@color/shu_view" />

        <TextView
            android:id="@+id/add_starttime_tv"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/addschedule_starttime_view"
            android:layout_toRightOf="@+id/addschedule_starttime_tv"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:textColor="@color/neirong"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/view" />

    <!-- 结束时间 -->

    <RelativeLayout
        android:id="@+id/addschedule_endtime_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/addschedule_endtime_point_img"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/home_icon_title_nor" />

        <TextView
            android:id="@+id/addschedule_endtime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/addschedule_endtime_point_img"
            android:gravity="center"
            android:text="@string/schedule_end"
            android:textColor="@color/zhanshang_title"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/addschedule_endtime_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/person_btn_edit_nor" />

        <View
            android:id="@+id/addschedule_endtime_view"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/addschedule_endtime_img"
            android:background="@color/shu_view" />

        <TextView
            android:id="@+id/add_endtime_tv"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/addschedule_endtime_view"
            android:layout_toRightOf="@+id/addschedule_endtime_tv"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:textColor="@color/neirong"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/view" />

    <!-- 简介 -->

    <RelativeLayout
        android:id="@+id/addschedule_Introduction_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:id="@+id/IntroductionRl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <ImageView
                android:id="@+id/addschedule_Introduction_point_img"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/home_icon_title_nor" />

            <TextView
                android:id="@+id/addschedule_Introduction_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/addschedule_Introduction_point_img"
                android:gravity="center"
                android:text="@string/schedule_introduction"
                android:textColor="@color/zhanshang_title"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/addschedule_Introduction_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/person_btn_edit_nor" />

        <View
            android:id="@+id/addschedule_Introduction_view"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/addschedule_Introduction_img"
            android:background="@color/shu_view" />

        <EditText
            android:id="@+id/addschedule_Introduction_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/addschedule_Introduction_view"
            android:layout_toRightOf="@+id/IntroductionRl"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLength="100"
            android:textColor="@color/neirong"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/view" />

</LinearLayout>