<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_follow_list"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp" >

        <View
            android:id="@+id/follow_line_view"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_centerVertical="true"
            android:layout_margin="7dp"
            android:background="@drawable/shape_schedule_tag" />

        <TextView
            android:id="@+id/follow_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/follow_line_view"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="慧点科技"
            android:textColor="#2A2D2E"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/follow_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="clickleft"
            android:scaleType="centerInside"
            android:src="@drawable/zsxq_btn_yiguanzhu_nor" />
    </RelativeLayout>

    <TextView
        android:id="@+id/follow_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:text="北京慧点科技有限公司（简称慧点科技）于1998年8月创立，是以GRC为理念的管理软件与服务提供商。公司成立以来，秉承“自强不息、厚德载物、创新协作、脚踏实地”的精神为近千家集团企业和政府客户提供了包括软件产品、应用开发、管理咨询和系统集成在内的特色服务。"
        android:textColor="#717172"
        android:textSize="12dp"
        android:visibility="gone" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="6dp"
        android:background="#C8C7CC" />

</LinearLayout>