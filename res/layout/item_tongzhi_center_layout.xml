<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_item_bg_color"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_tongzhi_head_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/btn_main_mytask" />

    <TextView
        android:id="@+id/item_tongzhi_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_tongzhi_head_img"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/item_tongzhi_head_img"
        android:text="大会紧急通知"
        android:textColor="#717172"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_tongzhi_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_tongzhi_head_img"
        android:layout_alignLeft="@+id/item_tongzhi_title_tv"
        android:text="2016.9.12 15:32:22"
        android:textColor="#609EFB"
        android:textSize="14sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="32dp"
        android:background="#C8C7CC" />

</RelativeLayout>