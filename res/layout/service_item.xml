<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<RelativeLayout
	    android:layout_marginTop="15dp"
        android:id="@+id/rl_huodong_dizhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/home_icon_title_nor" />

        <TextView
            android:id="@+id/service_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView2"
            android:text="服务号"
            android:textColor="#000"
            android:textSize="17sp"
            android:typeface="sans" />

        <ImageView
            android:id="@+id/service_call"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/zsxq_btn_call_nor" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/service_call"
            android:background="#363C44" />

        <TextView
            android:id="@+id/service_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/view1"
            android:textColor="@color/neirong"
            android:textSize="16sp"
            android:text="电话号" />
    </RelativeLayout>
    <View 
        android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/view"
		android:layout_marginLeft="20dp"
        />
</LinearLayout>
