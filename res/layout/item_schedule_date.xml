<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp" >

    <LinearLayout
        android:id="@+id/richeng_layout"
        android:layout_width="118dp"
        android:layout_height="52dp"
        android:background="@drawable/selector_schedule_bg"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/richeng_image"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/selector_schedul_btn_image" />

        <View
            android:id="@+id/richeng_line_view"
            android:layout_width="1px"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#C8C7CC" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/richeng_week_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="周三"
                android:textColor="@drawable/selector_schedul_btn_tv"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/richeng_date_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9月28日"
                android:textColor="@drawable/selector_schedul_btn_tv"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>