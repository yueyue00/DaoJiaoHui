<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <ImageView
            android:id="@+id/item_dianping_head_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic_vip" />

        <TextView
            android:id="@+id/item_dianping_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/item_dianping_head_img"
            android:text="张三"
            android:textColor="#2A2D2E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_dianping_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="2016.9.12 15:32:22"
            android:textColor="#609EFB"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_dianping_contain_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="12dp"
        android:text="二十余位重量级嘉宾将登临第十八二十余位重量级嘉宾将登临第十八..."
        android:textColor="#717172"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/item_dianping_img_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:maxHeight="300dp"
        android:maxWidth="200dp"
        android:scaleType="centerInside"
        android:src="@drawable/dianping_img_default_nor" />

    <GridView
        android:id="@+id/item_dianping_img_gv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="0dp"
        android:visibility="gone" >
    </GridView>

    <ImageView
        android:id="@+id/dianping_reply_img"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:layout_gravity="right"
        android:layout_marginRight="4dp"
        android:padding="8dp"
        android:src="@drawable/dianping_btn_reply_nor" />

    <LinearLayout
        android:id="@+id/dianping_leavemsg_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical" >
        
        <ImageView 
            android:layout_width="15dp"
            android:layout_height="8dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/top_triangle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/shape_top_bg" />

        <ListView
            android:id="@+id/dianping_leavemsg_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:listSelector="#00000000"
            android:scrollbars="none" >
        </ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/shape_bottom_bg" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dianping_reply_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ebebeb"
        android:visibility="gone" >

        
        <ImageView 
            android:id="@+id/reply_publish_img"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/reply_send"/>

        <EditText
            android:id="@+id/dianping_reply_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:layout_toLeftOf="@+id/reply_publish_img" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:background="#C8C7CC" />

</LinearLayout>