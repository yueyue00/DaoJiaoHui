<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.gj.gaojiaohui.activity.PersonalDataActivity" >

    <include layout="@layout/custom_title_layout" />

    <RelativeLayout
        android:id="@+id/rl_person_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/home_icon_title_nor" />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView2"
            android:gravity="center"
            android:text="@string/person_name"
            android:textColor="@color/zhanshang_title"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/edit_person_name"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/person_btn_edit_nor" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/edit_person_name"
            android:background="@color/shu_view" />

        <EditText
            android:id="@+id/name_et"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/view1"
            android:layout_toRightOf="@+id/person_name"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="@color/neirong"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/view" />

    <RelativeLayout
        android:id="@+id/rl_person_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/home_icon_title_nor" />

        <TextView
            android:id="@+id/cert6_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView4"
            android:gravity="center"
            android:text="@string/cert6"
            android:textColor="@color/zhanshang_title"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/cert6_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/person_btn_edit_nor" />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/cert6_img"
            android:background="@color/shu_view" />

        <EditText
            android:id="@+id/cert6_et"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/view2"
            android:layout_toRightOf="@+id/cert6_tv"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:ellipsize="end"
            android:focusable="false"
            android:gravity="right"
            android:inputType="text"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/neirong"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/view" />

    <RelativeLayout
        android:id="@+id/rl_person_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/home_icon_title_nor" />

        <TextView
            android:id="@+id/ticket_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView6"
            android:gravity="center"
            android:text="@string/ticketId"
            android:textColor="@color/zhanshang_title"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ticket_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/person_btn_edit_nor" />

        <View
            android:id="@+id/view5"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/ticket_img"
            android:background="@color/shu_view" />

        <EditText
            android:id="@+id/ticket_et"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/view5"
            android:layout_toRightOf="@+id/ticket_tv"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:inputType="text"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="@color/neirong"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/view" />

    <!-- 邀请码 -->

</LinearLayout>