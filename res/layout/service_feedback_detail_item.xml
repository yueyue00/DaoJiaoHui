<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/service_feedback_detail_item_icon_img"
            android:layout_width="37dp"
            android:layout_height="39dp"
            android:src="@drawable/pic_vip" />

        <TextView
            android:id="@+id/service_feedback_detail_item_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:text="title"
            android:textColor="#2A2D2E"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/service_feedback_detail_item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="#609EFB"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/service_feedback_detail_item_liuyan_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="12dp"
        android:text="hahahaahahah"
        android:textColor="#717172"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="10dp"
        android:background="#C8C7CC" />

</LinearLayout>