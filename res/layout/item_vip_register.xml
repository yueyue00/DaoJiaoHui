<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="某某王特约嘉宾"
            android:textColor="#2A2D2E"
            android:textSize="15dp" />

        <View
            android:layout_width="60dp"
            android:layout_height="1px"
            android:background="#C8C7CC" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp" >

        <LinearLayout
            android:id="@+id/qian_dao_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/qian_dao_img"
                android:layout_width="32dp"
                android:layout_height="33dp"
                android:src="@drawable/selector_qian_dao" />

            <TextView
                android:id="@+id/qian_dao_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/sign"
                android:textColor="@drawable/selector_vip_register_tv"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/song_ji_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="18dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/song_ji_img"
                android:layout_width="32dp"
                android:layout_height="33dp"
                android:src="@drawable/selector_song_ji" />

            <TextView
                android:id="@+id/song_ji_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/send_someone_to_airport"
                android:textColor="@drawable/selector_vip_register_tv"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/three_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/song_ji_layout"
            android:layout_toRightOf="@id/qian_dao_layout"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/jie_ji_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/jie_ji_img"
                    android:layout_width="32dp"
                    android:layout_height="33dp"
                    android:src="@drawable/selector_jie_ji" />

                <TextView
                    android:id="@+id/jie_ji_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/pick_up"
                    android:textColor="@drawable/selector_vip_register_tv"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ru_zhu_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ru_zhu_img"
                    android:layout_width="32dp"
                    android:layout_height="33dp"
                    android:src="@drawable/selector_ru_zhu" />

                <TextView
                     android:id="@+id/ru_zhu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/check_in"
                    android:textColor="@drawable/selector_vip_register_tv"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zhan_lan_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/zhan_lan_img"
                    android:layout_width="32dp"
                    android:layout_height="33dp"
                    android:src="@drawable/selector_zhan_lan" />

                <TextView
                    android:id="@+id/zhan_lan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/attend_a_show"
                    android:textColor="@drawable/selector_vip_register_tv"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>