<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F6"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/reply_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="张三"
        android:textColor="#2A2D2E"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/reply_maohao_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/reply_name_tv"
        android:text=":"
        android:textColor="#2A2D2E"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/reply_reply_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/reply_maohao_tv"
        android:layout_alignTop="@+id/reply_name_tv"
        android:text="第五展馆 第一会场"
        android:textColor="#717172"
        android:textSize="14sp" />

</RelativeLayout>