<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/please_login_rl"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/person_background_color"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/wellcome_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/setting_ninhao"
                    android:textColor="@color/time"
                    android:textSize="37sp" />

                <TextView
                    android:id="@+id/wellcome_login_names"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wellcome_login"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:text="@string/setting_please_login"
                    android:textColor="@color/time"
                    android:textSize="37sp" />

                <TextView
                    android:id="@+id/logins"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wellcome_login_names"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/setting_click_login"
                    android:textColor="@color/cultural_white"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/login_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="45dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/geren_img_touxiang_nor" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/is_logined_rl"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/person_background_color"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/wellcome_login2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="55dp"
                    android:text="@string/setting_ninhao"
                    android:textColor="@color/time"
                    android:textSize="37sp" />

                <TextView
                    android:id="@+id/login_names"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wellcome_login2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:text="@string/setting_please_login"
                    android:textColor="@color/time"
                    android:textSize="37sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/click_person_messages"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_names"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="35dp"
                    android:paddingRight="15dp"
                    android:text="@string/setting_supplement_data"
                    android:textColor="@color/cultural_white"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/supplementary_rl"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="135dp"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/supplementary_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:paddingRight="15dp"
                        android:text="@string/supplementary_information"
                        android:textColor="@color/cultural_white"
                        android:textSize="15sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/free_tickets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/supplementary_information"
                        android:text="@string/free_ticket"
                        android:textColor="@color/cultural_white"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp" >

                    <ImageView
                        android:id="@+id/qr_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/geren_img_qr_background_nor" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignLeft="@+id/qr_image"
                        android:layout_alignTop="@+id/qr_image"
                        android:layout_margin="11.5dp"
                        android:background="@color/white" />

                    <ImageView
                        android:id="@+id/user_qrs"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignLeft="@+id/qr_image"
                        android:layout_alignTop="@+id/qr_image"
                        android:layout_marginLeft="1.5dp"
                        android:layout_marginTop="1.5dp"
                        android:scaleType="fitXY" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/set_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/language_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item_bg_color"
                    android:paddingTop="17dp" >

                    <TextView
                        android:id="@+id/language_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/language_tag"
                        android:textColor="@color/zhanshang_title"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="@string/setting_language_china"
                        android:textColor="@color/zhanshang_title"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/language_tv"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/view" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/qr_code_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item_bg_color"
                    android:paddingTop="17dp" >

                    <TextView
                        android:id="@+id/qr_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/setting_qr_code"
                        android:textColor="@color/zhanshang_title"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/geren_icon_erweima_nor" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/qr_tv"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/view" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/set_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item_bg_color"
                    android:paddingTop="17dp" >

                    <TextView
                        android:id="@+id/set_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/setting_set"
                        android:textColor="@color/zhanshang_title"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/geren_icon_shezhi_nor" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/set_tv"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/view" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/eticket_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item_bg_color"
                    android:paddingTop="17dp"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/eticket_rl_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/Eticket_binding"
                        android:textColor="@color/zhanshang_title"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/geren_icon_erweima_nor" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/eticket_rl_tv"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/view" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/free_ticket_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item_bg_color"
                    android:paddingTop="17dp"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/free_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/my_free_ticket"
                        android:textColor="@color/zhanshang_title"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/geren_icon_erweima_nor" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/free_tv"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/view" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/offline_mode_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_item_bg_color"
                    android:paddingTop="17dp"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/offline_mode_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/zhanshang_title"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/offline_operate_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="@string/current"
                        android:textColor="@color/zhanshang_title"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/offline_mode_tv"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/view" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/offline_toast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f4f5f6"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/offline_toast"
                    android:textColor="#717172" />
            </LinearLayout>

            <ImageView
                android:id="@+id/personal_offline_img"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="26dp"
                android:layout_marginRight="13dp"
                android:src="@drawable/pic_btn_offline_nor"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>