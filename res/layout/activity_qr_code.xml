<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shu_view"
    android:orientation="vertical"
    tools:context="com.gj.gaojiaohui.activity.LanguageActivity" >

    <include
        android:id="@+id/layout"
        layout="@layout/custom_title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="120dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/qr_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:text="仅限一人使用,当日多次有效！"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/app_qr_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="130dp" />

    <TextView
        android:id="@+id/app_no_ticket_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout"
        android:background="#f4f5f6"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/my_ticket"
        android:textSize="18sp"
        android:visibility="gone" />

</RelativeLayout>