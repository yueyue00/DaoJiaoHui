<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/titleBg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:alpha="0"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" >
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00000000" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/home_title"
            android:textColor="#ffffff"
            android:textSize="22sp" >
        </TextView>

        <LinearLayout
            android:id="@+id/language_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:src="@drawable/home_btn_language_nor" />

            <TextView
                android:id="@+id/language_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_language"
                android:textColor="#ffffff"
                android:textSize="12sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/scanning_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/home_icon_scan_nor" />

            <TextView
                android:id="@+id/scanning_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_scaning"
                android:textColor="#ffffff"
                android:textSize="11.5sp" >
            </TextView>
        </LinearLayout>

        <View
            android:id="@+id/message_line"
            android:layout_width="1px"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/scanning_ll"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/message_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/message_line"
            android:orientation="vertical" >

            <View
                android:id="@+id/message_point"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_gravity="right"
                android:background="@drawable/shape_red_point"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/home_btn_message_nor" />

            <TextView
                android:id="@+id/message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_message"
                android:textColor="#ffffff"
                android:textSize="11.5sp" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>